# Backend API Environment Configuration for Production
# Copy this file to backend/.env.production and fill in the values

# ===============================================
# Server Configuration
# ===============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Application URL
APP_URL=https://api.fitkart.club
APP_NAME=FitKart API

# ===============================================
# Database Configuration
# ===============================================
# PostgreSQL database connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://fitkart_user:your-secure-password@localhost:5432/fitkart_production

# Database pool settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# ===============================================
# Redis Cache Configuration
# ===============================================
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0
REDIS_CACHE_TTL=3600

# ===============================================
# Authentication & Security
# ===============================================
# JWT Configuration
JWT_SECRET=your-very-long-secret-key-min-32-characters-for-security
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your-very-long-refresh-secret-key-min-32-characters
JWT_REFRESH_EXPIRY=30d

# API Keys
API_KEY_SECRET=your-api-key-secret-for-api-authentication

# CORS Configuration
CORS_ORIGIN=https://www.fitkart.club,https://admin.fitkart.club,https://app.fitkart.club
CORS_CREDENTIALS=true

# ===============================================
# Email Configuration (SMTP)
# ===============================================
# For Gmail: Use App Password (not regular password)
# See: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-character-app-password

# Email Settings
EMAIL_FROM=noreply@fitkart.club
EMAIL_FROM_NAME=FitKart

# ===============================================
# SMS Configuration (Optional)
# ===============================================
# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===============================================
# Payment Gateway Configuration
# ===============================================
# Stripe Configuration (recommended)
STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Razorpay Configuration (India)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# ===============================================
# Analytics & Monitoring
# ===============================================
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log Level
LOG_LEVEL=info

# ===============================================
# Rate Limiting
# ===============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window

# ===============================================
# Session Configuration
# ===============================================
SESSION_SECRET=your-very-long-session-secret-key-min-32-characters
SESSION_TTL=86400  # 24 hours in seconds

# ===============================================
# AWS Configuration (Optional)
# ===============================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=fitkart-uploads
AWS_S3_URL=https://fitkart-uploads.s3.ap-south-1.amazonaws.com

# ===============================================
# Maintenance & Feature Flags
# ===============================================
MAINTENANCE_MODE=false
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_REFERRAL_PROGRAM=true

# ===============================================
# External Services
# ===============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Timezone
TIMEZONE=Asia/Kolkata

# ===============================================
# Security & Certificate Pinning
# ===============================================
# Certificate Pinning (optional)
ENABLE_CERT_PINNING=false
PINNED_CERTIFICATES=cert1.pem,cert2.pem
