# FitKart Backend - Environment Variables

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fitkart
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL=false
DATABASE_LOGGING=true

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================
# JWT & Authentication
# ============================================
JWT_SECRET=your_very_secure_secret_key_min_32_chars_recommended
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
OTP_EXPIRY=10m
MAX_OTP_ATTEMPTS=5

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ============================================
# Encryption
# ============================================
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@fitkart.com

# ============================================
# AWS S3 (Optional)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=fitkart-uploads

# ============================================
# Shopify Integration (Optional)
# ============================================
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SHOP_NAME=
SHOPIFY_API_VERSION=2024-01

# ============================================
# Google Services (Optional)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_CALLBACK=http://localhost:3000/api/v1/auth/google/callback
GOOGLE_FIT_CLIENT_ID=
GOOGLE_FIT_CLIENT_SECRET=

# ============================================
# Apple Services (Optional)
# ============================================
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_HEALTH_TEAM_ID=
APPLE_HEALTH_KEY_ID=

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# ============================================
# Feature Flags
# ============================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_OTP_LOGIN=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_SHOPIFY_SYNC=false

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=dev

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=86400000

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAIL=admin@fitkart.com
SUPPORT_EMAIL=support@fitkart.com

