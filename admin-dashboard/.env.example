# FitKart Admin Dashboard Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# Application
NEXT_PUBLIC_APP_NAME=FitKart Admin
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Authentication
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAIN=localhost

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true

# For production deployment
# NEXT_PUBLIC_API_URL=https://www.fitkart.club/api/v1
# NEXTAUTH_URL=https://admin.fitkart.club
# NEXTAUTH_SECRET=<generate-with-openssl-rand-base64-32>
