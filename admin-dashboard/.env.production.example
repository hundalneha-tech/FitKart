# Admin Dashboard Environment Configuration for Production
# Copy this file to admin-dashboard/.env.production and fill in the values

# ===============================================
# Application Settings
# ===============================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=FitKart Admin
NEXT_PUBLIC_ENVIRONMENT=production

# ===============================================
# API Configuration
# ===============================================
# Backend API URL for production
NEXT_PUBLIC_API_URL=https://api.fitkart.club/api/v1

# API Timeout (ms)
NEXT_PUBLIC_API_TIMEOUT=30000

# ===============================================
# Authentication Configuration
# ===============================================
# NextAuth configuration for admin authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-very-long-secret-key-min-32-characters-generate-with-openssl
NEXTAUTH_URL=https://admin.fitkart.club

# Sign in page URL
NEXTAUTH_PAGES_SIGNIN=/login
NEXTAUTH_PAGES_ERROR=/login

# Session settings
NEXTAUTH_SESSION_MAX_AGE=86400  # 24 hours

# ===============================================
# JWT Configuration
# ===============================================
NEXT_PUBLIC_JWT_ALGORITHM=HS256
JWT_EXPIRY=7d

# ===============================================
# Domain Configuration
# ===============================================
NEXT_PUBLIC_DOMAIN=www.fitkart.club
NEXT_PUBLIC_API_DOMAIN=api.fitkart.club
NEXT_PUBLIC_ADMIN_DOMAIN=admin.fitkart.club

# ===============================================
# Analytics & Monitoring
# ===============================================
# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_AUTH_TOKEN=your-sentry-admin-token
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===============================================
# Feature Flags
# ===============================================
# Enable/disable specific dashboard features
NEXT_PUBLIC_FEATURE_USERS=true
NEXT_PUBLIC_FEATURE_PRODUCTS=true
NEXT_PUBLIC_FEATURE_ORDERS=true
NEXT_PUBLIC_FEATURE_LEADERBOARD=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_SETTINGS=true
NEXT_PUBLIC_FEATURE_SUSPICIOUS_ACTIVITY=true

# ===============================================
# Chart & Visualization
# ===============================================
# Recharts configuration
NEXT_PUBLIC_CHART_ANIMATION=true
NEXT_PUBLIC_CHART_COLORS=["#3b82f6","#ef4444","#10b981","#f59e0b","#8b5cf6"]

# ===============================================
# Pagination
# ===============================================
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_PAGE_SIZE_OPTIONS=10,25,50,100

# ===============================================
# Cache Configuration
# ===============================================
# React Query cache settings (ms)
NEXT_PUBLIC_QUERY_STALE_TIME=300000  # 5 minutes
NEXT_PUBLIC_QUERY_GC_TIME=600000     # 10 minutes
NEXT_PUBLIC_QUERY_RETRY_COUNT=1

# ===============================================
# Build & Performance
# ===============================================
# Enable/disable optimizations
NEXT_PUBLIC_ENABLE_GZIP=true
NEXT_PUBLIC_ENABLE_COMPRESSION=true

# ===============================================
# Internationalization
# ===============================================
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,hi
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Kolkata

# ===============================================
# Security & CORS
# ===============================================
# CORS Configuration
NEXT_PUBLIC_CORS_ORIGIN=https://api.fitkart.club

# Enable security features
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_HSTS=true

# ===============================================
# External Services
# ===============================================
# Google OAuth (for optional social login)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Mapbox (optional, for location features)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# ===============================================
# Debug & Development (Set to false in production)
# ===============================================
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_LOG_LEVEL=warn

# ===============================================
# Email Configuration
# ===============================================
NEXT_PUBLIC_SUPPORT_EMAIL=support@fitkart.club
NEXT_PUBLIC_ADMIN_EMAIL=admin@fitkart.club

# ===============================================
# Authentication Method
# ===============================================
# Options: jwt, session, oauth
NEXT_PUBLIC_AUTH_METHOD=jwt

# ===============================================
# Upload Configuration
# ===============================================
NEXT_PUBLIC_MAX_FILE_SIZE=5242880  # 5MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# ===============================================
# Stripe Configuration (for payment display)
# ===============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxx

# ===============================================
# Report Generation
# ===============================================
# Enable/disable report features
NEXT_PUBLIC_ENABLE_PDF_EXPORT=true
NEXT_PUBLIC_ENABLE_CSV_EXPORT=true
NEXT_PUBLIC_ENABLE_EMAIL_REPORTS=true

# ===============================================
# Search & Filtering
# ===============================================
NEXT_PUBLIC_SEARCH_DEBOUNCE_MS=300
NEXT_PUBLIC_MAX_SEARCH_RESULTS=50

# ===============================================
# Theme Configuration
# ===============================================
# Options: dark, light, auto
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_THEME_PRIMARY_COLOR=#3b82f6
NEXT_PUBLIC_THEME_SECONDARY_COLOR=#6366f1
