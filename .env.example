# .env.example - Example Environment Configuration
# Copy to .env and update values for your environment

# ============================================
# Environment
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database Configuration
# ============================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=fitkart
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres_default_password
DATABASE_URL=postgresql://postgres:postgres_default_password@postgres:5432/fitkart

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5050

# ============================================
# Logging
# ============================================
LOG_LEVEL=info

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@fitkart.com

# ============================================
# AWS Configuration (S3 for uploads)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=fitkart-uploads

# ============================================
# Shopify Configuration
# ============================================
SHOPIFY_STORE_URL=https://your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# ============================================
# Feature Flags
# ============================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_OTP=true
ENABLE_RATE_LIMITING=true
ENABLE_ANTI_CHEAT=true
ENABLE_PROFILING=false

# ============================================
# Monitoring (Production)
# ============================================
GRAFANA_PASSWORD=admin_secure_password
GRAFANA_URL=https://grafana.example.com

# ============================================
# Third-party Services
# ============================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/12345

# DataDog for monitoring
DATADOG_API_KEY=your_datadog_api_key

# Firebase for push notifications
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-email@firebase.gserviceaccount.com
